{
  "manifest_version": 3,
  "name": "ScrollBlocker",
  "version": "1.0",
  "description": "Bloque l'accès aux réseaux sociaux après un scroll prolongé.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}